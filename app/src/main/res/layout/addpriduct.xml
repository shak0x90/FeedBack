<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">

    <androidx.appcompat.widget.AppCompatImageButton
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="60dp"
        android:background="@color/trans"

        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.appcompat.widget.AppCompatImageButton>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/addProductTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Add Product"
        android:textColor="@color/blackheadingtext"
        android:textFontWeight="700"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.appcompat.widget.AppCompatTextView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="142dp">


    </androidx.constraintlayout.widget.Guideline>

    <com.google.android.material.imageview.ShapeableImageView

        android:id="@+id/imageprofile1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"

        android:scaleType="fitXY"
        android:src="@drawable/catimg1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addProductTv"
        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
        app:strokeWidth="1dp" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/trans"
        android:layout_marginLeft="32dp"
        android:src="@drawable/framecross6"
        app:layout_constraintStart_toStartOf="@id/imageprofile1"
        app:layout_constraintTop_toBottomOf="@id/gl1">

    </androidx.appcompat.widget.AppCompatImageButton>

    <com.google.android.material.imageview.ShapeableImageView

        android:id="@+id/imageprofile2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"

        android:scaleType="fitXY"
        android:src="@drawable/catimg3"
        app:layout_constraintStart_toEndOf="@id/imageprofile1"
        app:layout_constraintTop_toBottomOf="@id/addProductTv"
        app:layout_constraintEnd_toStartOf="@id/uploadproductId"
        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
        app:strokeWidth="1dp" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/trans"
        android:layout_marginLeft="32dp"
        android:src="@drawable/framecross6"
        app:layout_constraintStart_toStartOf="@id/imageprofile2"
        app:layout_constraintTop_toBottomOf="@id/gl1">

    </androidx.appcompat.widget.AppCompatImageButton>

    <com.google.android.material.imageview.ShapeableImageView

        android:id="@+id/imageprofile3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"

        android:scaleType="fitXY"
        android:src="@drawable/catimg2"
        app:layout_constraintStart_toEndOf="@id/imageprofile1"
        app:layout_constraintTop_toBottomOf="@id/addProductTv"
        app:layout_constraintEnd_toStartOf="@id/imageprofile2"
        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
        app:strokeWidth="1dp" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/trans"
        android:layout_marginLeft="32dp"
        android:src="@drawable/framecross6"
        app:layout_constraintStart_toStartOf="@id/imageprofile3"
        app:layout_constraintTop_toBottomOf="@id/gl1">

    </androidx.appcompat.widget.AppCompatImageButton>

    <com.google.android.material.imageview.ShapeableImageView

        android:id="@+id/imageprofile4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"

        android:scaleType="fitXY"
        android:src="@drawable/ematestimg"
        app:layout_constraintStart_toEndOf="@id/imageprofile2"
        app:layout_constraintEnd_toStartOf="@id/uploadproductId"
        app:layout_constraintTop_toBottomOf="@id/addProductTv"
        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
        app:strokeWidth="1dp" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/trans"
        android:layout_marginLeft="32dp"
        android:src="@drawable/framecross6"
        app:layout_constraintStart_toStartOf="@id/imageprofile4"
        app:layout_constraintTop_toBottomOf="@id/gl1">

    </androidx.appcompat.widget.AppCompatImageButton>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/uploadproductId"
        app:layout_constraintTop_toBottomOf="@id/addProductTv"

        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/circleshapeaddproduct"
        android:src="@drawable/upload"
        android:layout_marginTop="60dp"
        android:layout_width="50.75dp"
        android:layout_height="50.99dp">


    </androidx.appcompat.widget.AppCompatImageButton>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/proDuctNameTvId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageprofile1"

        android:layout_marginTop="16dp"
        android:textFontWeight="700"
        android:text="Product Name"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </androidx.appcompat.widget.AppCompatTextView>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/productEditText"
        android:layout_marginTop="16dp"
        android:paddingStart="16dp"
        android:text="Premium Dry Cat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/proDuctNameTvId"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="355dp"
        android:background="@drawable/edittexshapeblue"
        android:layout_height="55dp">

    </androidx.appcompat.widget.AppCompatEditText>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ProductPricetvID"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/productEditText"

        android:layout_marginTop="16dp"
        android:textFontWeight="700"
        android:text="Product Price"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </androidx.appcompat.widget.AppCompatTextView>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/productPriceEditTxt"
        android:layout_marginTop="16dp"
        android:paddingStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ProductPricetvID"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="355dp"
        android:background="@drawable/edittexshapeblue"
        android:layout_height="55dp">
    </androidx.appcompat.widget.AppCompatEditText>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/logintbtn"
        android:layout_marginBottom="44dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:background="@drawable/shapelarg_radious"
        android:text="Save"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:layout_height="54dp">

    </androidx.appcompat.widget.AppCompatButton>

</androidx.constraintlayout.widget.ConstraintLayout>