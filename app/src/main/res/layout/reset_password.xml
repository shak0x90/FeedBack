<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/arrowbtnId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:background="@color/trans"
        android:src="@drawable/baseline_arrow_back_24"
        android:layout_height="wrap_content">

    </androidx.appcompat.widget.AppCompatImageButton>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/logintvid"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="96dp"
        android:text="Reset Password"
        android:textSize="32sp"
        android:textFontWeight="700"
        android:textStyle="bold"
        android:textColor="@color/blackheadingtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </androidx.appcompat.widget.AppCompatTextView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/subheadertxtid"
        app:layout_constraintTop_toBottomOf="@id/logintvid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Enter your new password and confirm it"
        android:textSize="16sp"
        android:textFontWeight="500"
        android:textColor="@color/subhadingtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </androidx.appcompat.widget.AppCompatTextView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/paasswtxttv"
        app:layout_constraintTop_toBottomOf="@id/subheadertxtid"
        app:layout_constraintStart_toStartOf="@id/paswordEditext"
        android:layout_marginTop="20dp"
        android:text="New Password"
        android:textSize="14sp"
        android:textFontWeight="500"
        android:textColor="@color/subhadingtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </androidx.appcompat.widget.AppCompatTextView>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/paswordEditext"
        app:layout_constraintTop_toBottomOf="@id/paasswtxttv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginTop="20dp"
        android:hint="      ******************"
        android:layout_width="355dp"
        android:background="@drawable/edittexshapeblue"
        android:layout_height="55dp">

    </androidx.appcompat.widget.AppCompatEditText>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/confirmpassTv"
        app:layout_constraintTop_toBottomOf="@id/paswordEditext"
        app:layout_constraintStart_toStartOf="@id/confirmpaassEditext"
        android:layout_marginTop="20dp"
        android:text="Confirm New Password"
        android:textSize="14sp"
        android:textFontWeight="500"
        android:textColor="@color/subhadingtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </androidx.appcompat.widget.AppCompatTextView>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/confirmpaassEditext"
        app:layout_constraintTop_toBottomOf="@id/confirmpassTv"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:hint="      ******************"
        android:layout_width="355dp"
        android:background="@drawable/edittexshapeblue"
        android:layout_height="55dp">

    </androidx.appcompat.widget.AppCompatEditText>

    <androidx.appcompat.widget.AppCompatImageButton
        app:layout_constraintTop_toTopOf="@id/confirmpaassEditext"
        app:layout_constraintEnd_toEndOf="@id/confirmpaassEditext"
        android:layout_marginRight="40dp"
        android:layout_marginTop="15dp"
        android:background="#ffffff"
        android:src="@drawable/passhideye"
        android:layout_width="24dp"
        android:layout_height="24dp">

    </androidx.appcompat.widget.AppCompatImageButton>

    <androidx.appcompat.widget.AppCompatImageButton
        app:layout_constraintTop_toTopOf="@id/paswordEditext"
        app:layout_constraintEnd_toEndOf="@id/paswordEditext"
        android:layout_marginRight="40dp"
        android:layout_marginTop="15dp"
        android:background="#ffffff"
        android:src="@drawable/passhideye"
        android:layout_width="24dp"
        android:layout_height="24dp">

    </androidx.appcompat.widget.AppCompatImageButton>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/regisBtnBottomId"
        android:layout_width="353dp"
        android:layout_height="54dp"

        android:background="@drawable/shapelarg_radious"
        android:text="Continue"
        android:textAllCaps="false"
        android:layout_marginTop="60dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmpaassEditext"
        >

    </androidx.appcompat.widget.AppCompatButton>
</androidx.constraintlayout.widget.ConstraintLayout>